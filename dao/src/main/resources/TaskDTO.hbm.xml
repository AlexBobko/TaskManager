<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="dto.TaskDTO" table="tasks">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="int" column="task_id">
            <generator class="native"/>
        </id>
        <!--private GregorianCalendar dateCreation , deadline-->
        <property name="title" column="title" type="string"/>
        <property name="dateCreation" column="date_creation" type="string"/>
        <property name="body" column="body" type="string"/>
        <property name="deadline" column="deadline" type="string"/>
        <property name="history" column="history" type="string"/>
    </class>
</hibernate-mapping>